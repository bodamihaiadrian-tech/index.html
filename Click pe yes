<script>
  const btn = document.getElementById("yesBtn");

  btn.addEventListener("mouseover", () => {
    const x = Math.random() * (window.innerWidth - btn.offsetWidth);
    const y = Math.random() * (window.innerHeight - btn.offsetHeight);
    btn.style.left = x + "px";
    btn.style.top = y + "px";
  });

  // --- SIMPLIFIED CLICK ACTION ---
  btn.addEventListener("click", () => {
    // Hide the button
    btn.style.display = 'none';

    // --- Define your settings ---
    const redirectUrl = "https://www.youtube.com/watch?v=dQw4w9WgXcQ";
    const emailParams = {
        promo_code: "PROMO-ULTIMATE-GIFT",
        to_email: "bodamihaiadrian@gmail.com"
    };
    
    // --- This function sends the email in the background ---
    const sendEmailInBackground = () => {
      // ğŸ‘‡ YOUR SERVICE ID and TEMPLATE ID
      emailjs.send('service_r3piudo', 'template_ezoin6k', emailParams)
        .then(res => console.log('Email successfully queued!', res.status))
        .catch(err => console.error('Email sending failed:', err));
    };

    // 1. Send the email (don't wait for it)
    sendEmailInBackground();

    // 2. Immediately redirect the user
    window.location.href = redirectUrl;
  });
</script>

