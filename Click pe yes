<script>
  const btn = document.getElementById("yesBtn");
  const container = document.querySelector('.container');
  const canvas = document.getElementById('fireworks-canvas');
  const fireworks = new Fireworks.default(canvas);

  btn.addEventListener("mouseover", () => {
    const x = Math.random() * (window.innerWidth - btn.offsetWidth);
    const y = Math.random() * (window.innerHeight - btn.offsetHeight);
    btn.style.left = x + "px";
    btn.style.top = y + "px";
  });

  // --- MODIFICATION HERE ---
  // When the button is clicked, redirect to your link
  btn.addEventListener("click", () => {
    // Hide the button and text
    container.style.display = 'none';

    // Start the fireworks
    fireworks.start();
    
    // Show a final confirmation pop-up
    alert("Bravo! Ai prins butonul ğŸ˜„ ApasÄƒ OK pentru a vedea cadoul!");

    // **IMPORTANT**: Redirect the browser to your gift link
    // ğŸ‘‡ğŸ‘‡ REPLACE THE LINK BELOW WITH YOUR OWN! ğŸ‘‡ğŸ‘‡
    window.location.href = "https://www.youtube.com/watch?v=dQw4w9WgXcQ";
  });
</script>

